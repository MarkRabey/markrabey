{{!< default}}
{{#contentFor "metaTitle"}}{{@blog.title}}{{/contentFor}}
{{#contentFor "metaDescription"}}{{meta_description}}{{/contentFor}}
{{#contentFor "metaKeywords"}}{{#if meta_keywords}}{{meta_keywords}}{{else}}{{@blog.title}},{{@blog.description}}{{/if}}{{/contentFor}}


{{! The main content area on the homepage }}
<main class="content" role="main">

    {{! Each post will be output using this markup }}
    {{#foreach posts}}

    <article role="article" itemscope itemtype="http://schema.org/BlogPosting"  class="{{post_class}}">
        <header class="post-header">

            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
            <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date timeago="true"}}</time> {{tags prefix="on "}}</span>
        </header>
        <section class="post-excerpt">
            <p>{{excerpt}}&hellip;</p>
        </section>
    </article>

    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}

</main>