{{!< default}}

{{#contentFor "metaTitle"}}{{tag.name}} | {{@blog.title}}{{/contentFor}}
{{#contentFor "metaDescription"}}{{#if meta_description}}{{meta_description}}{{else}}{{@blog.description}}{{/if}}{{/contentFor}}
{{#contentFor "metaKeywords"}}{{tags autolink="false"}}{{#if meta_keywords}}, {{meta_keywords}}{{else}}, {{@blog.title}},{{@blog.description}}{{/if}}{{/contentFor}}

{{! The main content area on the homepage }}
<main class="content" role="main">

        <header class="tag-archive-header">

            <h1><small>Posts on </small>{{tag.name}}</h1>
            <hr />
        </header>

    {{! Each post will be output using this markup }}
    {{#foreach posts}}

    <article class="{{post_class}}">
        <header class="post-header">
            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
            <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date timeago="true"}}</time> {{tags prefix="on "}}</span>
        </header>
        <section class="post-excerpt">
            <p>{{excerpt}}&hellip;</p>
        </section>
    </article>

    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}

</main>